# ─────────────────────────────────────────────────────────────────────────────────
# DATABASE
# ─────────────────────────────────────────────────────────────────────────────────
DB_PASSWORD=ncaam_dev_password
REDIS_PASSWORD=ncaam_redis_pass

# ─────────────────────────────────────────────────────────────────────────────────
# API KEYS (required for production)
# ─────────────────────────────────────────────────────────────────────────────────
THE_ODDS_API_KEY=
API_BASKETBALL_KEY=
BETSAPI_KEY=
ACTION_NETWORK_USERNAME=
ACTION_NETWORK_PASSWORD=

# ─────────────────────────────────────────────────────────────────────────────────
# MODEL PARAMETERS - SINGLE SOURCE OF TRUTH
# ─────────────────────────────────────────────────────────────────────────────────
# Optimized via backtesting (2024-12-17):
#   - Spreads HCA=3.0: 16.57% ROI
#   - Totals HCA=4.5: 34.10% ROI
#   - Combined: 25.64% ROI
# ─────────────────────────────────────────────────────────────────────────────────

# SPREAD-specific parameters (use lower HCA)
MODEL__HOME_COURT_ADVANTAGE_SPREAD=3.0
MODEL__HOME_COURT_ADVANTAGE_SPREAD_1H=1.5

# TOTAL-specific parameters (use higher HCA)
MODEL__HOME_COURT_ADVANTAGE_TOTAL=4.5
MODEL__HOME_COURT_ADVANTAGE_TOTAL_1H=2.25

# Edge thresholds (minimum points to bet)
MODEL__MIN_SPREAD_EDGE=2.5
MODEL__MIN_TOTAL_EDGE=3.0

# First half factors
MODEL__FIRST_HALF_PACE_FACTOR=0.50
MODEL__FIRST_HALF_SCORE_FACTOR=0.50

# Confidence threshold
MODEL__MIN_CONFIDENCE=0.65

# Kelly criterion (fractional Kelly for safety)
MODEL__KELLY_FRACTION=0.25

# Legacy (deprecated - use SPREAD/TOTAL specific values above)
MODEL__HOME_COURT_ADVANTAGE=3.0
MODEL__HOME_COURT_ADVANTAGE_1H=1.5

# CORS / SECURITY
CORS_ALLOWED_ORIGINS=http://localhost:3000
