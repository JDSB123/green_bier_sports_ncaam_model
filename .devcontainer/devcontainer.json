{
  "name": "NCAAM Sports Model (Python + Go)",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },
  "forwardPorts": [
    8000,
    5432,
    6379,
    8081
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "8081": {
      "label": "Redis Commander",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "astral-sh.ruff",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azureaccount",
        "ms-vscode.azurecli",
        "ms-azuretools.vscode-cosmosdb",
        "golang.go",
        "rust-lang.rust-analyzer",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-azure-postgres",
        "redhat.vscode-yaml",
        "github.vscode-github-actions",
        "editorconfig.editorconfig",
        "mikestead.dotenv"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.ruffEnabled": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.python",
          "editor.formatOnSave": true
        },
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "go.lintOnSave": "package",
        "go.useLanguageServer": true,
        "github.copilot.enable": {
          "*": true,
          "plaintext": true,
          "markdown": true
        },
        "github.copilot.autocomplete.enable": true,
        "editor.inlineSuggest.enabled": true,
        "github.copilot-chat.enable": {
          "*": true
        },
        "github.copilot.autoApprove": {
          "agents": true,
          "webSearch": true,
          "tools": true
        },
        "research.autoApproveAgents": true,
        "research.webSearchEnabled": true
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "remoteUser": "codespace",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/codespace/.ssh,readonly",
    "source=codespace-pip-cache,target=/home/codespace/.cache/pip",
    "source=codespace-venv,target=/workspaces/green_bier_sports_ncaam_model/.venv"
  ]
}
