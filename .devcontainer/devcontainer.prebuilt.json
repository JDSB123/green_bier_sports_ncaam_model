{
  "name": "NCAAM Sports Model (Python + Go) - Pre-built Image",
  "image": "ghcr.io/jdsb123/green_bier_sports_ncaam_model-devcontainer:latest",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/go:1.22": {},
    "ghcr.io/devcontainers/features/postgres:latest": {},
    "ghcr.io/devcontainers/features/redis:latest": {}
  },
  "forwardPorts": [
    8000,
    8092,
    5432,
    5450,
    6379,
    6390,
    8081
  ],
  "portsAttributes": {
    "8000": {
      "label": "FastAPI",
      "onAutoForward": "notify"
    },
    "8092": {
      "label": "Prediction Service (compose)",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "5450": {
      "label": "PostgreSQL (compose)",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    },
    "6390": {
      "label": "Redis (compose)",
      "onAutoForward": "silent"
    },
    "8081": {
      "label": "Redis Commander",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "golang.go",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-azure-postgres"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.linting.ruffEnabled": true,
        "[python]": {
          "editor.defaultFormatter": "ms-python.python",
          "editor.formatOnSave": true
        },
        "[go]": {
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
          }
        },
        "go.lintOnSave": "package",
        "go.useLanguageServer": true,
        "github.copilot.enable": {
          "*": true,
          "plaintext": true,
          "markdown": true
        },
        "github.copilot.autocomplete.enable": true,
        "editor.inlineSuggest.enabled": true,
        "github.copilot-chat.enable": {
          "*": true
        },
        "github.copilot.autoApprove": {
          "agents": true,
          "webSearch": true,
          "tools": true
        },
        "research.autoApproveAgents": true,
        "research.webSearchEnabled": true
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  "remoteUser": "codespace",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/codespace/.ssh,readonly",
    "source=codespace-azure-cli,target=/home/codespace/.azure",
    "source=codespace-pip-cache,target=/home/codespace/.cache/pip"
  ]
}
